Bootstrap: docker
From: ubuntu:18.04

%labels
  AUTHOR Sebastian Spreizer <spreizer@web.de>

%post
  apt-get update && apt-get install -y tzdata
  apt-get install -y \
    build-essential \
    cmake \
    cython3 \
    git \
    libgsl-dev \
    libltdl-dev \
    libncurses5-dev \
    libreadline-dev \
    python \
    python3-all-dev \
    python3-matplotlib \
    python3-numpy \
    python3-pandas \
    python3-scipy \
    python3-pip

  apt-get autoremove -y
  rm -rf /var/lib/apt/lists/*

  pip3 install ipython jupyter --upgrade

  cd /tmp/
  git clone https://github.com/nest/nest-simulator.git
  cd nest-simulator; git fetch

  rm -rf /tmp/nest-build; mkdir /tmp/nest-build; cd /tmp/nest-build
  cmake \
    -DCMAKE_INSTALL_PREFIX:PATH=/opt/nest-simulator \
    -Dwith-python=3 \
    /tmp/nest-simulator
  make -j 4; make install

  rm -rf /tmp/nest-simulator /tmp/nest-build

%environment
  . /opt/nest-simulator/bin/nest_vars.sh
